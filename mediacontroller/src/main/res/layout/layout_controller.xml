<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3000"
    android:gravity="end"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/controlsPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1000"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/controlsSpeed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/controlsSpeed">

        <ImageButton
            android:id="@+id/prev"
            style="@android:style/MediaButton.Previous"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:background="#1000" />

        <ImageButton
            android:id="@+id/rew"
            style="@android:style/MediaButton.Rew"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:background="#1000" />

        <ImageButton
            android:id="@+id/pause"
            style="@android:style/MediaButton.Play"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="#1000" />

        <ImageButton
            android:id="@+id/ffwd"
            style="@android:style/MediaButton.Ffwd"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="#1000" />

        <ImageButton
            android:id="@+id/next"
            style="@android:style/MediaButton.Next"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="#1000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/controlsSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1000"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/speedMinus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="#1000"
            android:src="@drawable/minus" />

        <TextView
            android:id="@+id/speedCurrent"
            android:layout_width="48dp"
            android:layout_height="32dp"
            android:background="#1000"
            android:gravity="center"
            android:text="1.0x"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            android:textColor="#fff" />

        <ImageButton
            android:id="@+id/speedPlus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="#1000"
            android:src="@drawable/plus" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>